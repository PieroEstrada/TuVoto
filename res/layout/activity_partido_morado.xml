<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_morado"
    tools:context=".PartidoMorado">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="?attr/colorPrimary"
        android:backgroundTint="#573C93"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_Salaverry"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:layout_marginTop="16dp"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/nombre_morado_julio"
            android:textColor="@color/white"
            android:textSize="24sp"


            />
    </androidx.appcompat.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="80dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/julio_guzman" />

            <TextView
                android:id="@+id/edad_julio"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/edad_julio"
                android:textColor="#2C076D"
                android:textSize="16sp"


                />

            <TextView
                android:id="@+id/julio_edad"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/julio_edad"
                android:textColor="@color/white"
                android:textSize="16sp"


                />
            <TextView
                android:id="@+id/formacion_julio"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/estudios_julio"
                android:textColor="#2C076D"
                android:textSize="16sp"


                />

            <TextView
                android:id="@+id/julio_formacion"
                android:layout_width="353dp"
                android:layout_height="match_parent"

                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/julio_estudios"
                android:textColor="@color/white"
                android:textSize="16sp"


                />
            <TextView
                android:id="@+id/julio_experiencia"
                android:layout_width="353dp"
                android:layout_height="match_parent"

                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/experiencia_julio"
                android:textColor="#2C076D"
                android:textSize="16sp"


                />
            <TextView
                android:id="@+id/julio_exp"
                android:layout_width="353dp"
                android:layout_height="match_parent"

                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/julio_experiencia_laboral"
                android:textColor="@color/white"
                android:textSize="16sp"


                />
            <TextView
                android:id="@+id/julio_denuncias"
                android:layout_width="353dp"
                android:layout_height="match_parent"

                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/denuncias_julio"
                android:textColor="#2C076D"
                android:textSize="16sp"


                />
            <TextView
                android:id="@+id/julio_denu"
                android:layout_width="353dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/julio_denuncias"
                android:textColor="@color/white"
                android:textSize="16sp"


                />
        </LinearLayout>
    </ScrollView>

</FrameLayout>